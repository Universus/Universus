<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/access_box"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/general_translucent_background"
    android:orientation="vertical"
    android:layout_centerInParent="true"
    android:layout_margin="6dp"
    android:padding="6dp">

    <EditText
        android:id="@+id/txt_matricula"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/matricula"
        android:inputType="number"/>
    <EditText
        android:id="@+id/txt_contraseña"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/contraseña"
        android:layout_below="@id/txt_matricula"
        android:password="true"/>

</RelativeLayout>